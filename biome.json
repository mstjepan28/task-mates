{
  "files": {
    "ignore": ["dist/*", "src-tauri/*"]
  },
  "organizeImports": {
    "enabled": false,
    "ignore": ["node_modules", "native", "package.json"]
  },
  "javascript": {
    "globals": ["React", "JSX"]
  },
  "formatter": {
    "ignore": ["node_modules"],
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "ignore": ["node_modules"],
    "rules": {
      "a11y": {
        "noNoninteractiveTabindex": {
          "level": "off"
        },
        "useKeyWithClickEvents": {
          "level": "off"
        },
        "noLabelWithoutControl": {
          "level": "off"
        },
        "useGenericFontNames": {
          "level": "off"
        },
        "noSvgWithoutTitle": {
          "level": "off"
        },
        "useHeadingContent": {
          "level": "off"
        },
        "useMediaCaption": {
          "level": "off"
        },
        "useAltText": {
          "level": "off"
        }
      },
      "complexity": {
        "noExtraBooleanCast": {
          "level": "error"
        },
        "useArrowFunction": {
          "level": "error"
        },
        "noBannedTypes": {
          "level": "error"
        },
        "useFlatMap": {
          "level": "error"
        },
        "noUselessConstructor": {
          "level": "off"
        },
        "noUselessFragments": {
          "level": "off"
        },
        "useOptionalChain": {
          "level": "off"
        },
        "noForEach": {
          "level": "off"
        }
      },
      "correctness": {
        "noUndeclaredVariables": {
          "level": "error"
        },
        "useHookAtTopLevel": {
          "level": "error"
        },
        "noUnusedVariables": {
          "level": "error"
        },
        "noUnusedImports": {
          "level": "error"
        },
        "noUnreachable": {
          "level": "error"
        },
        "useExhaustiveDependencies": {
          "level": "off"
        }
      },
      "performance": {
        "noAccumulatingSpread": {
          "level": "error"
        },
        "noDelete": {
          "level": "error"
        }
      },
      "security": {},
      "style": {
        "useExponentiationOperator": {
          "level": "off"
        },
        "noUnusedTemplateLiteral": {
          "level": "off"
        },
        "useSelfClosingElements": {
          "level": "off"
        },
        "noNonNullAssertion": {
          "level": "off"
        },
        "noParameterAssign": {
          "level": "off"
        },
        "noUselessElse": {
          "level": "off"
        },
        "useTemplate": {
          "level": "off"
        }
      },
      "suspicious": {
        "noConfusingVoidType": {
          "level": "off"
        },
        "noArrayIndexKey": {
          "level": "off"
        },
        "noDoubleEquals": {
          "level": "off"
        },
        "noExplicitAny": {
          "level": "off"
        }
      }
    }
  }
}
